{
  "name": "clarity",
  "version": "6.0.0-next.6",
  "private": true,
  "workspaces": [
    "./packages/core",
    "./packages/angular",
    "./packages/angular/projects/*",
    "./packages/react",
    "./packages/eslint-plugin-clarity-adoption"
  ],
  "scripts": {
    "commit": "git-cz",
    "clean:modules": "del ./**/node_modules",
    "clean": "del ./dist",
    "start": "npm run core:start",
    "build": "npm-run-all build:ci",
    "build:ci": "npm-run-all clean lint build:libs test storybook:build",
    "build:libs": "npm-run-all core:build -p react:build angular:build",
    "test": "npm-run-all core:test -p angular:test",
    "lint": "npm-run-all core:lint angular:lint react:lint",
    "lint:fix": "npm-run-all core:lint:fix angular:lint:fix react:lint:fix",
    "license:fix": "node scripts/update-license",
    "format": "prettier --list-different './**/*.{js,json,md,ts,scss}'",
    "format:fix": "pretty-quick --staged",
    "format:file": "prettier --write .",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release:setversion": "node ./scripts/set-version.js",
    "release:copyversion": "node ./scripts/copy-version.js",
    "storybook:build": "yarn --cwd packages/core run storybook:build",
    "core:start": "npm run start --workspace=@cds/core-workspace",
    "core:build": "npm run build --workspace=@cds/core-workspace",
    "core:test": "npm run test --workspace=@cds/core-workspace",
    "core:test:watch": "npm run test:watch --workspace=@cds/core-workspace",
    "core:lint": "npm run lint --workspace=@cds/core-workspace",
    "react:start": "npm run start --workspace=@cds/react-workspace",
    "react:build": "npm run build --workspace=@cds/react-workspace",
    "react:test": "npm run test --workspace=@cds/react-workspace",
    "react:lint": "npm run lint --workspace=@cds/react-workspace",
    "angular:start": "npm run start --workspace=@cds/react-workspace",
    "angular:build": "npm run build --workspace=@cds/angular-workspace",
    "angular:test": "npm run test --workspace=@cds/angular-workspace",
    "angular:lint": "npm run lint --workspace=@cds/angular-workspace",
    "eslint:build": "npm run build --workspace=eslint-plugin-clarity-adoption-workspace",
    "eslint:test": "npm run test --workspace=eslint-plugin-clarity-adoption-workspace",
    "eslint:lint": "npm run lint --workspace=eslint-plugin-clarity-adoption-workspace"
  },
  "_nohoist": "any deps that should not be hoisted list under dependencies, https://github.com/npm/rfcs/issues/287",
  "dependencies": {
    "tslib": "2.0.0",
    "typescript": "4.5.4",
    "jasmine": "4.0.0",
    "lit": "2.0.0",
    "ramda": "^0.27.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@commitlint/prompt": "^15.0.0",
    "@types/node": "^16.11.11",
    "@typescript-eslint/eslint-plugin": "5.5.0",
    "@typescript-eslint/parser": "5.5.0",
    "commitizen": "^4.2.4",
    "conventional-changelog-cli": "^2.1.1",
    "cpy-cli": "^3.1.1",
    "cross-env": "5.2.0",
    "del": "6.0.0",
    "del-cli": "3.0.1",
    "detect-browser": "4.1.0",
    "dotenv": "8.1.0",
    "eslint": "8.3.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jasmine": "4.1.3",
    "fs-extra": "8.1.0",
    "glob": "7.1.6",
    "husky": "1.3.1",
    "lite-server": "2.6.1",
    "mustache": "4.0.1",
    "netlify-cli": "2.25.0",
    "netlify-lambda": "1.4.5",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.5",
    "pretty-quick": "1.11.0",
    "replace": "1.1.0",
    "shelljs": "0.8.3",
    "source-map": "0.7.3",
    "superagent": "5.1.0",
    "ts-morph": "8.2.0",
    "ts-node": "8.2.0"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/prompt"
    }
  },
  "engines": {
    "node": ">=16",
    "yarn": "PLEASE USE NPM"
  }
}
